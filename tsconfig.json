{
    "compilerOptions": {
        "noUnusedLocals": false,
        "allowUnreachableCode": false,
        "esModuleInterop": true,
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022",
            "DOM"
        ],
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "declaration": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "inlineSourceMap": true,
        "inlineSources": true,
        "experimentalDecorators": true,
        "strictPropertyInitialization": true,
        "stripInternal": true,
        // can't change it [ "./dist/package" to "./dist"] as changing the output path will break all dependent projects.
        // we'll need to make sure to create a new release with plans to upgrade the dependent projects.
        "outDir": "./dist/package",
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "node_modules",
        "cdk.out"
    ]
}